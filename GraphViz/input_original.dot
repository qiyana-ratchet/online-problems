digraph MyGraph {
    // Define nodes with labels and attributes
    A [label="Node A", shape=ellipse, color=blue];
    B [label="Node B", shape=box, color=green];
    C [label="Node C", shape=diamond, color=red];

    // Define edges with attributes
    A -> B [label="Edge 1", weight=2];
    B -> C [label="Edge 2", weight=1];
    C -> A [label="Edge 3", weight=3];

    // Set graph-level attributes
    rankdir=LR; // Horizontal layout
    splines=polyline; // Use curved edges
}
